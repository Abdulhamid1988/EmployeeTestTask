@model System.Collections.Generic.List<TestTask.Entities.Employee>
@{
    ViewBag.Title = "Employees";
    Layout = "_Layout";
}
<h2>Employees</h2>
<form id="uploadForm" enctype="multipart/form-data" method="post" asp-action="Import">
    <input type="file" name="file" required />
    <button type="submit" class="btn btn-primary">Import</button>
</form>
<div id="message"></div>
<table id="employees" class="table table-striped">
    <thead>
    <tr>
        <th>Payroll Number</th>
        <th>Forenames</th>
        <th>Surname</th>
        <th>Date of Birth</th>
        <th>Telephone</th>
        <th>Mobile</th>
        <th>Address</th>
        <th>Postcode</th>
        <th>Email</th>
        <th>Start Date</th>
        <th>Edit</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.PayrollNumber</td>
            <td>@employee.ForeNames</td>
            <td>@employee.Surname</td>
            <td>@employee.DateOfBirth</td>
            <td>@employee.Telephone</td>
            <td>@employee.Mobile</td>
            <td>@employee.Address</td>
            <td>@employee.Postcode</td>
            <td>@employee.Email</td>
            <td>@employee.StartDate</td>
            <td>
                <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#employees').DataTable({
            dom: 'fltip', 
            searching: true, 
            ordering: true,  
            info: true,
            order: [[2, 'asc']],
            columnDefs: [
                { type: 'date', targets: [3, 9] }
            ]
        });
    });
</script>

